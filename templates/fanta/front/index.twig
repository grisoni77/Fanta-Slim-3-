{% extends 'fanta/front/includes/layout.twig' %}

{% block corpo %}
<h1>Front</h1>
    {% if (not session) %}
    <p>Login form</p>
    <form action="{{ path_for('front-login') }}" method="post">
        <label for="user">User</label>
        <input type="text" name="user" id="user" />
        <br/>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" />
        <br/>
        <input type="submit" value="Salva">
    </form>
    {% else %}
        ciao {{ session.user }}
    {% endif %}
{% endblock %}

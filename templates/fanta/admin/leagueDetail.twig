{% extends 'fanta/admin/includes/layout.twig' %}

{% block corpo %}
    <h1>{{ league.name }}</h1>
    <ul>
        {% for team in teams %}
            <li>
                <a href="{{ path_for('team-detail', {'team_id':team.id}) }}">{{ team.name }}</a>
            </li>
        {% endfor %}
    </ul>
    <h2>Aggiungi nuovo</h2>
    <form action="{{ path_for('team-add', {'league_id':league.id}) }}" method="post">
        <label for="name">Nome</label>
        <input type="text" name="name" id="name" />
        <br/>
        <input type="submit" value="Salva">

    </form>
{% endblock %}

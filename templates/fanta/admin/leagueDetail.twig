{% extends 'fanta/admin/includes/layout.twig' %}

{% block corpo %}
    <h1>{{ league.name }}</h1>
    <ul>
        {% for team in teams %}
            <li>
                <a href="{{ path_for('team-detail', {'league_id':league.id,'team_id':team.id}) }}">
                    {{ team.name }} ({{ team.user.name}})
                </a>
            </li>
        {% endfor %}
    </ul>
    <h2>Aggiungi nuovo</h2>
    <form action="{{ path_for('team-add', {'league_id':league.id}) }}" method="post">
        <label for="name">Nome</label>
        <input type="text" name="name" id="name" />
        <br/>
        <label for="user">User</label>
        <select id="user" name="user_id">
            {% for user in users %}
                <option value="{{ user.id }}">{{ user.name }}</option>
            {% endfor %}
        </select>
        <br/>
        <input type="hidden" name="league_id" value="{{ league.id }}">
        <input type="submit" value="Salva">

    </form>
{% endblock %}
